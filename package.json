  "description": "用語集アプリケーション - 複数人共有対応版",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 8080 -c-1",
    "dev": "npx http-server . -p 8080 -c-1 --cors",
    "api": "node cosmos-api-server.js",
    "proxy": "node proxy-server.js",
    "dev:full": "concurrently \"npm run api\" \"npm run proxy\" \"npm run dev\"",
  "start:all": "node all-in-one.js",
    "cosmos": "node cosmos-api-server.js",
    "e2e": "playwright test",
    "build": "echo 'This is a client-side application - no build step required'",
    "test": "echo 'No tests specified'"
