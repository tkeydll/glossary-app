    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "@playwright/test": "^1.46.1"
  },
  "engines": {
    "node": ">=18.0.0"
